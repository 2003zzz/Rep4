@using WB_APP.Models
@model List<Vegetables>
@{
    ViewBag.Title = "Овощи таблицей";
}
<h2>Отсортированный список овощей</h2>
<table class="table" style="width:20%">
    <thead>
        <tr>
            <th class="text-center" style="background-color:aquamarine">Наименование</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vegetable in Model)
        {
            <tr class="text-left">
                <td style="background-color:darkorchid;
                        color:azure;
                        text-align:center;
                        font-size:110%">
                    @vegetable.Name: @vegetable.Price руб
                </td>
            </tr>
        }
    </tbody>
</table>