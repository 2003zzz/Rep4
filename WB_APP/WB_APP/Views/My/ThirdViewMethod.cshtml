@using WB_APP.Models
@model List<Vegetables>
@{
    ViewBag.Title = "Овощи сгруппиированы";
}
<h2>Группировка овощей (по таблицам)</h2>
@{
    var currentModel = Model.GroupBy(x => x.Name.Substring(0, 1)).ToList();
    for (int letterIndex = 0; letterIndex < currentModel.Count(); letterIndex++)
    {
    <table class="table" style="width:20%; border:1px solid;">
                <thead>
                    <tr>
                        <th class="text-center"
                        style="background-color:aquamarine">@currentModel[letterIndex].Key</th>
                    </tr>
                </thead>
                @for (int objectIndex = 0; objectIndex < currentModel[letterIndex].Count(); objectIndex++)
                {
                    <tr class="text-left">
                        <td style="background-color:darkorchid;
                                   color:azure;
                                   text-align:center;
                                   font-size:110%">
                            @currentModel[letterIndex].ElementAt(objectIndex).Name:
                            @currentModel[letterIndex].ElementAt(objectIndex).Price руб
                        </td>
                    </tr>
                }
    </table>
    }
}